<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:amdroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="300px"/>

    <Button
        android:id="@+id/loadWebButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Website"
        android:layout_below="@id/webView"/>

    <Button
        android:id="@+id/saveWebButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Website"
        android:layout_below="@id/loadWebButton"/>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear View"
        android:layout_below="@id/saveWebButton"/>

    <Button
        android:id="@+id/loadLocalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Local"
        android:layout_below="@id/clearButton"/>


</RelativeLayout>